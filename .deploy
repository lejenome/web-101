#!/usr/bin/env bash
set -x

# TODO:  dev, production
ENV=${1:-dev}

if [ -e "Gemfile" ]; then
	bundle install
fi

if [ "${ENV}" == "production" ]; then
	JEKYLL_ENV=production bundle exec jekyll build
elif [ "${ENV}" == "android" ]; then
	JEKYLL_ENV=production bundle exec jekyll build -b /android_asset/www
	cordova build android
else
	bundle exec jekyll build
fi

if [ -f "platforms/android/build/outputs/apk/android-debug.apk" ]; then
	cp platforms/android/build/outputs/apk/android-debug.apk www/app.apk
fi
